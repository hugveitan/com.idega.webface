<?xml version="1.0" encoding="UTF-8"?>

<project>
  <extend>${base.project.dir}/base-dependencies.xml</extend>
  <name>idegaWeb WebFace</name>
  <artifactId>com.idega.webface</artifactId>
  <currentVersion>0.8.1-SNAPSHOT</currentVersion>
  <inceptionYear>2003</inceptionYear>
  <shortDescription>JSF Components</shortDescription>
  <description>idegaWeb WebFace is a component API Built on JavaServer Faces</description>
  <versions>
    <version>
      <id>0.8</id>
      <name>0.8</name>
      <tag>WEBFACE_0_8</tag>
    </version>
  </versions>  
  <developers>
    <developer>
      <id>tryggvil</id>
      <name>Tryggvi Larusson</name>
      <email>tryggvi@idega.is</email>
      <organization>idega software</organization>
      <roles/>
    </developer>
    <developer>
      <id>anders</id>
      <name>Anders Lindman</name>
      <email>anders.lindman@ncmedia.com</email>
      <organization/>
      <roles/>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <groupId>bundles</groupId>
      <artifactId>com.idega.core</artifactId>
      <!--<version>1.9</version>-->
      <version>SNAPSHOT</version>
      <type>jar</type>
      <url>http://www.idega.com/</url>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>
    <dependency>
      <groupId>bundles</groupId>
      <artifactId>com.idega.faces</artifactId>
      <!--<version>0.9</version>-->
      <version>SNAPSHOT</version>
      <type>jar</type>
      <url>http://www.idega.com/</url>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>
    <dependency>
      <groupId>myfaces</groupId>
      <artifactId>myfaces-components</artifactId>
      <version>1.0.7</version>
      <type>jar</type>
      <url>http://www.myfaces.org/</url>
      <properties>
        <idegaweb.bundle.include>true</idegaweb.bundle.include>
      </properties>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>
  </build>
</project>
